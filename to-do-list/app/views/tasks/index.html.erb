<h1>To-Do Lists</h1>

<%= link_to "Create New", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>
