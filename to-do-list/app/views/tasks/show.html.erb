<h1><%= @task.name %></h1>

<%= link_to "Edit Task", edit_task_path %>
<%= link_to "New List", new_task_list_path(@task) %>

<ul data-controller="lists">
  <% @task.lists.each do |list| %>
    <li>
      <% if list.check == true %>
        <input type="checkbox" checked>
      <% else %>
        <input type="checkbox">
      <% end %>
      <%= list.description %>
      <%= link_to "Delete",
        list_path(list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>

<%= link_to "Back", tasks_path %>
